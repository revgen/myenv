alias shlint='shellcheck'

# disabling Python bytecode (.pyc) files: generating the bytecode is extremely fast,
# and isnâ€™t something we need to worry about while developing our code
export PYTHONDONTWRITEBYTECODE=1

# aliases and settings for docker
alias ctop='docker run --rm -ti --name=ctop --volume /var/run/docker.sock:/var/run/docker.sock:ro quay.io/vektorlab/ctop:latest'
alias docktop='ctop'
alias docker-clean-none='docker image rm -f $(docker images -f "dangling=true" -q --no-trunc | grep "^sha" || echo "the-list-is-empty")'

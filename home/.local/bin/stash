#!/usr/bin/env python3
###############################################################################
#
#
###############################################################################
import argparse
import os
import sys
from typing import List


def cli(app_name: str, args: List[str] = {}) -> None:
    """ TODO:
    """
    parser = argparse.ArgumentParser(prog=app_name,
        description="Description start",
        epilog="End of the description")
    parser.add_argument("-i", "--input", help="Input file")
    parser.add_argument("-o", "--output", help="Output file")
    parser.add_argument("-k", "--key", help="Key file")
    parser.add_argument("-p", "--password", help="Passsword")
    parser.add_argument("--debug", action=argparse.BooleanOptionalAction, default=False)
    parser.add_argument("-d", "--decode", action=argparse.BooleanOptionalAction, default=False)
    args = parser.parse_args()
    if not args.input:
        args.input = "/dev/stdin"
    if not args.output:
        args.output = "/dev/stdout"
    if not args.password and not args.key:
        args.key = "default"
    if not args.decode and app_name.startswith("dec"):
        args.decode = True
    print(f"input = {args.input}")
    print(f"output = {args.output}")
    print(f"key = {args.key}")
    print(f"password = {args.password}")
    print(f"debug = {args.debug}")
    print(f"decode = {args.decode}")
    return 0


if __name__ == "__main__":
    sys.exit(cli(os.path.basename(sys.argv[0]), sys.argv[1:]))

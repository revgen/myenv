#!/bin/sh
#=============================================================================
## Preview files or directory
#=============================================================================
case "${1}" in
    help|--help|h|-h) sed -n '/^##/,/^$/s/^## \{0,1\}//p' "$0" | sed 's/{SCRIPT_NAME}/'"${0##*/}"'/g'; exit 255 ;;
esac

open -a Preview.app "${1:-"./"}"

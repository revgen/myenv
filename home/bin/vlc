#!/bin/sh
filename=${1:-"${HOME}/Music"}
echo "Openning '${filename}' with VLC.app"
if [ "$(uname -s)" == "Darwin" ]; then
    # Do not store a history
    # sudo chflags schg "${HOME}/Library/Preferences/org.videolan.vlc.plist"
    /usr/bin/open -a VLC.app "${filename}"
else
    /usr/bin/vlc "${filename}"
fi
